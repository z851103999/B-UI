{
  "name": "basic-ui",
  "version": "0.0.0",
  "description": "A basic components library",
  "main": "lib/index.js",
  "module": "es/index.js",
  "typings": "types/index.d.ts",
  "vetur": {
    "tags": "highlight/tags.json",
    "attributes": "highlight/attributes.json"
  },
  "web-types": "highlight/web-types.json",
  "keywords": [
    "Vue",
    "UI"
  ],
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "varlet-cli dev",
    "build": "varlet-cli build",
    "preview": "varlet-cli preview",
    "compile": "varlet-cli compile",
    "lint": "varlet-cli lint",
    "changelog": "varlet-cli changelog",
    "release": "pnpm compile && varlet-cli release",
    "test": "varlet-cli jest",
    "test:watch": "varlet-cli jest -w",
    "test:watchAll": "varlet-cli jest -wa"
  },
  "peerDependencies": {
    "vue": "^3.2.16"
  },
  "devDependencies": {
    "@varlet/cli": "^1.27.20",
    "@varlet/eslint-config": "^1.27.20",
    "@varlet/icons": "^1.27.20",
    "@varlet/shared": "^1.27.20",
    "@varlet/stylelint-config": "^1.27.20",
    "@varlet/touch-emulator": "^1.27.20",
    "@vue/test-utils": "2.0.0-rc.6",
    "clipboard": "^2.0.11",
    "eslint": "8.24.0",
    "lint-staged": "13.0.3",
    "live-server": "^1.2.2",
    "lodash-es": "^4.17.21",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "stylelint": "14.12.1",
    "typescript": "^4.8.3",
    "vue": "3.2.39",
    "vue-router": "4.1.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --allow-empty --concurrent false",
    "commit-msg": "npx --no-install varlet-cli commit-lint $1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,vue,less}": "prettier --write",
    "*.{ts,tsx,js,vue}": "eslint --fix",
    "*.{vue,css,less}": "stylelint --fix"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "lib/**",
      "es/**",
      "umd/**",
      "site/**",
      "public/**",
      "src/*/__tests__/**",
      ".varlet/**"
    ],
    "extends": [
      "@varlet"
    ]
  },
  "stylelint": {
    "extends": [
      "@varlet/stylelint-config"
    ],
    "ignoreFiles": [
      "lib/**",
      "es/**",
      "umd/**",
      "site/**",
      "coverage/**",
      "public/**",
      "highlight/**",
      ".varlet/**"
    ]
  },
  "browserslist": [
    "Chrome >= 51",
    "iOS >= 10"
  ],
  "packageManager": "pnpm@6.24.3",
  "files": [
    "es",
    "lib",
    "umd",
    "highlight",
    "types"
  ],
  "dependencies": {
    "jest": "29.0.3"
  }
}
