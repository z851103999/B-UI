{
  "name": "basic-ui",
  "version": "0.0.0",
  "description": "A basic components library",
  "main": "lib/index.js",
  "module": "es/index.js",
  "typings": "types/index.d.ts",
  "vetur": {
    "tags": "highlight/tags.json",
    "attributes": "highlight/attributes.json"
  },
  "web-types": "highlight/web-types.json",
  "keywords": [
    "Vue",
    "UI"
  ],
  "license": "MIT",
  "scripts": {
    "husky": "husky install",
    "preinstall": "npx only-allow pnpm",
    "commit": "git-cz",
    "dev": "varlet-cli dev",
    "build": "varlet-cli build",
    "preview": "varlet-cli preview",
    "compile": "varlet-cli compile",
    "lint": "varlet-cli lint",
    "changelog": "varlet-cli changelog",
    "release": "pnpm compile && varlet-cli release",
    "test": "varlet-cli jest",
    "test:watch": "varlet-cli jest -w",
    "test:watchAll": "varlet-cli jest -wa"
  },
  "peerDependencies": {
    "vue": "^3.2.16"
  },
  "devDependencies": {
    "@types/jest": "27.4.1",
    "@varlet/cli": "1.26.4",
    "@varlet/eslint-config": "1.26.4",
    "@varlet/icons": "1.26.4",
    "@varlet/stylelint-config": "1.26.4",
    "@varlet/touch-emulator": "1.26.4",
    "@vue/test-utils": "1.3.0",
    "clipboard": "2.0.10",
    "eslint": "8.11.0",
    "lint-staged": "12.3.5",
    "live-server": "1.2.1",
    "lodash-es": "4.17.21",
    "prettier": "2.5.1",
    "stylelint": "14.5.3",
    "typescript": "4.6.2",
    "vue": "3.2.31",
    "vue-jest": "3.0.7",
    "vue-router": "4.0.14"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --allow-empty --concurrent false",
    "commit-msg": "npx --no-install varlet-cli commit-lint $1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,vue,less}": "prettier --write",
    "*.{ts,tsx,js,vue}": "eslint --fix",
    "*.{vue,css,less}": "stylelint --fix"
  },
  "release-it": {
    "git": {
      "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
      "tagName": "v${version}",
      "commitMessage": "chore: release ${version}",
      "requireCleanWorkingDir": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "lib/**",
      "es/**",
      "umd/**",
      "site/**",
      "public/**",
      "src/*/__tests__/**",
      ".varlet/**"
    ],
    "extends": [
      "@varlet"
    ]
  },
  "stylelint": {
    "extends": [
      "@varlet/stylelint-config"
    ],
    "ignoreFiles": [
      "lib/**",
      "es/**",
      "umd/**",
      "site/**",
      "coverage/**",
      "public/**",
      "highlight/**",
      ".varlet/**"
    ]
  },
  "browserslist": [
    "Chrome >= 51",
    "iOS >= 10"
  ],
  "packageManager": "pnpm@6.24.3",
  "files": [
    "es",
    "lib",
    "umd",
    "highlight",
    "types"
  ]
}
